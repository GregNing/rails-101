<div class="container">
  <div class="row">
    <%= simple_form_for @group do |f| %>
      <div class="col-sm-12">
        <%= f.input :title %>
        <%= f.input :description %>
      </div>
      <div class="col-sm-10">
        <%= f.button :submit, class: 'btn-primary' %>
      </div>
      <div class="col-sm-2">
        <%= link_to('Back To Home', groups_path) %>
      </div>
    <% end %>
  </div>
</div>