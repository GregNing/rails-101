<div class="container">
  <div class="row">
    <div class="post">
      <h3>Post</h3>
      <p class="post-content"><%= @post.content %></p>
      <p>
        Create by:
        <%= @post.author.name %>
        --
        <%= render_model_created_at(@post) %>
      </p>
    </div>

    <h3>Comments</h3>
    <div id="message-list">
      <% @messages.each do |message| %>
        <%= render('messages/message', message: message) %>
      <% end %>
    </div>

    <div class="comment-board">
      <%= simple_form_for [@group, @post, @message], remote: true do |f| %>
        <div class="form-group">
          <%= f.input :content, label: 'Comment Board', class: "form-control" %>
        </div>
        <div class="form-actions">
          <%= f.submit "Submit", class: 'btn btn-primary pull-right', disable_with: 'Submitting...' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
